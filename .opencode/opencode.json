{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    ".opencode/instructions.md",
    ".opencode/experts/*/PROMPT.md"
  ],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "perplexity": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@perplexity-ai/mcp-server"
      ],
      "environment": {
        "PERPLEXITY_API_KEY": "{env:PERPLEXITY_API_KEY}"
      }
    },
    "applescript": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@peakmojo/applescript-mcp"
      ]
    },
    "desktop-automation": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-desktop-automation"
      ]
    }
  },
  "agent": {
    "scout": {
      "description": "Research agent that gathers docs, downloads sources, and takes notes using MCPs (Context7, Perplexity, grep.app)",
      "mode": "subagent",
      "temperature": 0.3,
      "tools": {
        "write": true,
        "bash": false,
        "webfetch": true,
        "download-page": true
      }
    },
    "wikify": {
      "description": "Distills raw documentation into condensed, scannable wiki format extracting key information",
      "mode": "subagent",
      "temperature": 0.2,
      "tools": {
        "write": true,
        "edit": false,
        "bash": false
      }
    },
    "git": {
      "description": "Git workflow specialist. Use when committing changes - analyzes git status/diff, groups changes logically, creates commits with {Subject/Module} // {Message} format, learns repo patterns.",
      "mode": "subagent",
      "model": "{env:OPENCODE_SUMMARY_FAST}",
      "temperature": 0.1,
      "tools": {
        "bash": true,
        "write": false,
        "edit": false
      }
    },
    "reviewer": {
      "description": "Code review specialist that analyzes code for issues and improvements",
      "mode": "subagent",
      "temperature": 0.2,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      },
      "permission": {
        "webfetch": "ask"
      }
    },
    "local_models": {
      "description": "Expert in local LLM deployment, optimization, and model selection for Apple Silicon (M1 Max 32GB) with Ollama",
      "mode": "subagent",
      "temperature": 0.3,
      "tools": {
        "write": true,
        "edit": false,
        "bash": false,
        "webfetch": true,
        "ollama_list": true,
        "ollama_ps": true,
        "ollama_pull": true,
        "ollama_stop": true,
        "ollama_rm": true,
        "ollama_show": true,
        "ollama_status": true,
        "ollama_generate": true,
        "ollama_copy": true
      }
    },
    "desktop_control": {
      "description": "macOS desktop automation specialist using AppleScript. Controls system settings, applications, calendar, reminders, clipboard, files, and more through natural language commands.",
      "mode": "subagent",
      "provider": "ollama",
      "model": "llama3-groq-tool-use:8b",
      "temperature": 0.2,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      },
      "mcp": [
        "applescript"
      ]
    },
    "desktop-pro": {
      "description": "Comprehensive macOS/cross-platform desktop control combining AppleScript (native) and desktop automation (screenshots, mouse, keyboard) for intelligent visual automation.",
      "mode": "subagent",
      "provider": "ollama",
      "model": "llama3-groq-tool-use:8b",
      "temperature": 0.2,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      },
      "mcp": [
        "applescript",
        "desktop-automation"
      ]
    },
    "feature_documenter": {
      "description": "Documents codebase features by analyzing source code and creating concise implementation guides. Focused on code patterns, adaptation strategies, and actionable checklists.",
      "mode": "subagent",
      "model": "anthropic/claude-sonnet-4-5",
      "temperature": 0.1,
      "maxTokens": 8000,
      "tools": {
        "read": true,
        "write": true,
        "edit": false,
        "task": false,
        "background_task": false,
        "bash": false,
        "webfetch": true,
        "glob": true,
        "grep": true
      },
      "mcp": []
    }
  },
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen2.5-coder:32b": {
          "name": "Qwen2.5 Coder 32B",
          "description": "19 GB • 19 minutes ago"
        },
        "deepseek-r1:32b": {
          "name": "Deepseek R1 32B",
          "description": "19 GB About • an hour ago"
        },
